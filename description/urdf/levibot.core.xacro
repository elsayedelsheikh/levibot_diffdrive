<?xml version="1.0" encoding="utf-8"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">
  <!-- ============= Materials & Intertias =============  -->
  <xacro:include filename="$(find levibot_skidsteer)/urdf/inertial_macros.xacro"/>
  <xacro:include filename="$(find levibot_skidsteer)/urdf/materials.xacro"/>

  <!-- =============== Links & Joints =============== -->

  <link name="base_link"/>

  <!-- Chassis Link  -->
  <joint name="chassis_joint" type="fixed">
    <parent link="base_link"/>
    <child link="chassis"/>
    <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
  </joint>

  <link name="chassis">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.25 0.10 0.06"/>
      </geometry>
      <material name="blue"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.25 0.10 0.06"/>
      </geometry>
    </collision>
    <xacro:inertial_box mass="1.0" x="0.25" y="0.10" z="0.06">
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </xacro:inertial_box>
  </link>

  <!-- Front Right Wheel Link -->
  <joint name="fr_wheel_joint" type="continuous">
    <origin xyz="0.06 -0.065 -0.035" rpy="${pi/2} 0 0"/>
    <parent link="base_link"/>
    <child link="fr_wheel_link"/>
    <axis xyz="0 0 -1"/>
  </joint>

  <link name="fr_wheel_link">
    <visual>
      <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
      <geometry>
        <cylinder radius="0.03" length="0.025"/>
      </geometry>
      <material name="green"/>
    </visual>
    <collision>
      <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
      <geometry>
        <cylinder radius="0.03" length="0.025"/>
      </geometry>
    </collision>
    <xacro:inertial_cylinder mass="0.1" length="0.025" radius="0.03">
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </xacro:inertial_cylinder>
  </link>

  <!-- Front left Wheel Link -->
  <joint name="fl_wheel_joint" type="continuous">
    <origin xyz="0.06 0.065 -0.035" rpy="-${pi/2} 0 0"/>
    <parent link="base_link"/>
    <child link="fl_wheel_link"/>
    <axis xyz="0 0 1"/>
  </joint>

  <link name="fl_wheel_link">
    <visual>
      <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
      <geometry>
        <cylinder radius="0.03" length="0.025"/>
      </geometry>
      <material name="green"/>
    </visual>
    <collision>
      <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
      <geometry>
        <cylinder radius="0.03" length="0.025"/>
      </geometry>
    </collision>
    <xacro:inertial_cylinder mass="0.1" length="0.025" radius="0.03">
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </xacro:inertial_cylinder>
  </link>

  <!-- Rare Right Wheel Link -->
  <joint name="rr_wheel_joint" type="continuous">
    <origin xyz="-0.06 -0.065 -0.035" rpy="${pi/2} 0 0"/>
    <parent link="base_link"/>
    <child link="rr_wheel_link"/>
    <axis xyz="0 0 -1"/>
  </joint>

  <link name="rr_wheel_link">
    <visual>
      <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
      <geometry>
        <cylinder radius="0.03" length="0.025"/>
      </geometry>
      <material name="green"/>
    </visual>
    <collision>
      <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
      <geometry>
        <cylinder radius="0.03" length="0.025"/>
      </geometry>
    </collision>
    <xacro:inertial_cylinder mass="0.1" length="0.025" radius="0.03">
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </xacro:inertial_cylinder>
  </link>

  <!-- Rare left Wheel Link -->
  <joint name="rl_wheel_joint" type="continuous">
    <origin xyz="-0.06 0.065 -0.035" rpy="-${pi/2} 0 0"/>
    <parent link="base_link"/>
    <child link="rl_wheel_link"/>
    <axis xyz="0 0 1"/>
  </joint>

  <link name="rl_wheel_link">
    <visual>
      <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
      <geometry>
        <cylinder radius="0.03" length="0.025"/>
      </geometry>
      <material name="green"/>
    </visual>
    <collision>
      <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
      <geometry>
        <cylinder radius="0.03" length="0.025"/>
      </geometry>
    </collision>
    <xacro:inertial_cylinder mass="0.1" length="0.025" radius="0.03">
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </xacro:inertial_cylinder>
  </link>

  <!-- Sensors -->

  <!-- IMU Link -->
  <joint name="imu_joint" type="fixed">
    <origin xyz="0.0 0.0 0.03" rpy="0.0 0.0 0.0"/>
    <parent link="base_link"/>
    <child link="imu_link"/>
  </joint>

  <link name="imu_link">
    <collision>
      <geometry>
        <box size="0.025 0.02 0.005"/>
      </geometry>
    </collision>
    <visual>
      <geometry>
        <box size="0.025 0.02 0.005"/>
      </geometry>
      <material name="white" />
    </visual>
    <xacro:inertial_box mass="0.005" x="0.025" y="0.02" z="0.005">
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </xacro:inertial_box>
  </link>

  <!-- LIDAR Link -->
  <joint name="lidar_joint" type="fixed">
    <origin xyz="0.1 0.0 0.03" rpy="0.0 0.0 0.0"/>
    <parent link="base_link"/>
    <child link="levibot/base_link/lidar"/>
  </joint>

  <link name="levibot/base_link/lidar">
    <collision>
      <geometry>
        <box size="0.03 0.03 0.025"/>
      </geometry>
    </collision>
    <visual>
      <geometry>
        <box size="0.03 0.03 0.025"/>
      </geometry>
      <material name="red" />
    </visual>
    <xacro:inertial_box mass="0.007" x="0.03" y="0.03" z="0.025">
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </xacro:inertial_box>
  </link>



</robot>